{
    "version": 2,
    "configurePresets": [
        {
            "name": "base",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-fdiagnostics-color=always -fverbose-asm -masm=intel -Wpedantic -Wall -Wextra -Wduplicated-cond -Wduplicated-branches -Wlogical-op -Wrestrict -Wnull-dereference -Wold-style-cast -Wuseless-cast -Wdouble-promotion -Wshadow -Wformat=2 -Wno-missing-field-initializers -Wno-comment",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "inherits": "base",
            "name": "debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS_DEBUG": "-ggdb3 -O0"
            }
        },
        {
            "inherits": "base",
            "name": "release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_RELEASE": "-Ofast -fno-exceptions -fno-rtti -flto -DNDEBUG"
            }
        },
        {
            "inherits": "base",
            "name": "relwithdebinfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-O2 -g -DNDEBUG"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "configurePreset": "base"
        },
        {
            "inherits": "base",
            "name": "test",
            "targets": "pistonen-test"
        }
    ]
}