{
    "version": 4,
    "include": [],
    "configurePresets": [
        {
            "name": "base",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_INIT": "-fconcepts-diagnostics-depth=2 -std=c++23 -fdiagnostics-color=always -fverbose-asm -masm=intel -march=native -Wpedantic -Wall -Wextra -Wduplicated-cond -Wduplicated-branches -Wlogical-op -Wrestrict -Wnull-dereference -Wuseless-cast -Wdouble-promotion -Wshadow -Wformat=2 -Wno-missing-field-initializers -Wno-comment",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "inherits": "base",
            "name": "Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS_DEBUG": "-g3 -ggdb3 -O0"
            }
        },
        {
            "inherits": "base",
            "name": "Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_RELEASE": "-Ofast -fno-rtti -flto -DNDEBUG"
            }
        },
        {
            "inherits": "base",
            "name": "relwithdebinfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-O2 -g -DNDEBUG"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "configurePreset": "base"
        },
        {
            "inherits": "base",
            "name": "test",
            "targets": "server"
        }
    ]
}
